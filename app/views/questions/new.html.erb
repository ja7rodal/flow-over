<h2>Nueva Pregunta</h2>
<%= form_for @question do |f|%>
  <div class="form-group">
      <%= f.text_field :title, class: "", placeholder: "Titulo" %>
  </div>

  <div class="form-group">
      <%= f.text_area :description, class:"", placeholder: "Pregunta...", size: "60x12" %>
  </div>

  <div class="form-group">
      <%= f.submit "Publicar Pregunta", class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
