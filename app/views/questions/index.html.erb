<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-2">

      <h1>Questions</h1>
      <% @question.each do |question| %>
      <h2><%= question.title  %></h2>
      <p><%= question.description %></p>
      <p><%= link_to "Edit", edit_question_path(question) %>
      <%= link_to "Eliminar", question, method: :delete,data: { confirm: "¿Estás seguro?" } %></p>

      <% end %>

      <div class="">
        <%= link_to "Preguntar", new_question_path ,class:"" %>
      </div>
    </div>
  </div>
</div>
