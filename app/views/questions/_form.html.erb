<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
    
      <h2><%= form_title %></h2>
      <%= form_for @question do |f|%>
      <div class="form-group">
        <%= f.text_field :title, class: "form-control input-lg", placeholder: "Titulo" %>
      </div>

      <div class="form-group">
        <%= f.text_area :description, class:"form-control input-lg", placeholder: "Pregunta...", size: "60x12" %>
      </div>

      <div class="form-group">
        <%= f.submit form_title, class: "btn btn-primary btn-lg btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
